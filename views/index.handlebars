<div class="container">

  <div class="row">

    <div class="col-md-12">

      <h1 class="text-center" >Burger Time!</h1>

    </div>

  </div>

  <div class="row">

    <div class="col-md-6">

      <h2>burger that are not devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>

     </div>

    <div class="col-md-6">

      <h2>Burger that are devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
 
    </div>

  </div>

  <div class="row">

    <div class="col-md-4">
    </div>

    <div class="col-md-4">

      <h2>Add a Burger</h2>

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit" class="submitBtn btn btn-primary">
          Add Burger
        </button>

      </form>

    </div>

    <div class="col-md-4">
    </div>


  </div>

</div>

